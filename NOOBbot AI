<!DOCTYPE html>
<html>
<head>
  <title>AI Chatbot</title>
  <style>
    body { font-family: sans-serif; padding: 20px; background: #222; color: #eee; }
    textarea, input { width: 100%; margin-top: 10px; }
  </style>
</head>
<body>
  <h1>AI Chatbot</h1>
  <div id="chat"></div>
  <textarea id="prompt" rows="3" placeholder="Írj valamit..."></textarea>
  <button onclick="sendMessage()">Küldés</button>

  <script>
    async function sendMessage() {
      const prompt = document.getElementById("prompt").value;
      document.getElementById("chat").innerHTML += `<p><b>Te:</b> ${prompt}</p>`;
      const response = await fetch("https://api.openai.com/v1/chat/completions", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "Authorization": "Bearer SAJAT_API_KULCSOD"
        },
        body: JSON.stringify({
          model: "gpt-3.5-turbo",
          messages: [{ role: "user", content: prompt }]
        })
      });
      const data = await response.json();
      const reply = data.choices[0].message.content;
      document.getElementById("chat").innerHTML += `<p><b>Bot:</b> ${reply}</p>`;
    }
  </script>
</body>
</html>